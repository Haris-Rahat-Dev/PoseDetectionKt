<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context=".StepsActivity">
    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/stepProgressBar"
        android:layout_centerInParent="true"
        app:cpb_background_progressbar_color="#F2F2F2"
        app:cpb_background_progressbar_width="20dp"
        app:cpb_progressbar_color="@color/my_light_primary"
        app:cpb_progressbar_width="15dp"
        app:cpb_round_border="true"
        app:cpb_progress_max="2500"
        />
    <TextView
        android:id="@+id/stepsTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:textColor="@color/my_light_primary"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/totalMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/2500"
        android:textSize="14sp"
        android:textColor="@color/my_light_primary"
        android:layout_below="@id/stepsTaken"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textColor="@color/white"
        android:background="@color/my_light_primary"
        android:id="@+id/resetButton"
        android:layout_below="@id/stepProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>