    <!--        android:textColorHint="@color/light_black" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="4dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_margin="8dp"
                android:elevation="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="12dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:src="@color/my_light_primary" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cv_inside"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:maxLines="1"
                                android:text="Pushups"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                app:layout_constraintStart_toStartOf="@id/cv_inside"
                                app:layout_constraintTop_toTopOf="@id/cv_inside" />

                            <TextView
                                android:id="@+id/tv_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:drawableStart="@drawable/baseline_timer_24"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="30 Min"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="@id/cv_inside"
                                app:layout_constraintEnd_toStartOf="@id/tv_difficulty"
                                app:layout_constraintStart_toStartOf="@id/cv_inside"
                                app:layout_constraintTop_toBottomOf="@id/tv_title" />

                            <TextView
                                android:id="@+id/tv_difficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:drawableStart="@drawable/baseline_bar_chart_24"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Easy"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="@id/cv_inside"
                                app:layout_constraintEnd_toEndOf="@id/cv_inside"
                                app:layout_constraintStart_toEndOf="@id/tv_duration"
                                app:layout_constraintTop_toBottomOf="@id/tv_title" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_two"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_margin="8dp"
                android:elevation="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="12dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:src="@color/my_light_primary" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cv_inside1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:maxLines="1"
                                android:text="Squats"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                app:layout_constraintStart_toStartOf="@id/cv_inside1"
                                app:layout_constraintTop_toTopOf="@id/cv_inside1" />

                            <TextView
                                android:id="@+id/tv_duration1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:drawableStart="@drawable/baseline_timer_24"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="30 Min"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="@id/cv_inside1"
                                app:layout_constraintEnd_toStartOf="@id/tv_difficulty1"
                                app:layout_constraintStart_toStartOf="@id/cv_inside1"
                                app:layout_constraintTop_toBottomOf="@id/tv_title1" />

                            <TextView
                                android:id="@+id/tv_difficulty1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:drawableStart="@drawable/baseline_bar_chart_24"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Easy"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="@id/cv_inside1"
                                app:layout_constraintEnd_toEndOf="@id/cv_inside1"
                                app:layout_constraintStart_toEndOf="@id/tv_duration1"
                                app:layout_constraintTop_toBottomOf="@id/tv_title1" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_three"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_margin="8dp"
                android:elevation="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="12dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:src="@color/my_light_primary" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cv_inside3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:maxLines="1"
                                android:text="Plank"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                app:layout_constraintStart_toStartOf="@id/cv_inside3"
                                app:layout_constraintTop_toTopOf="@id/cv_inside3" />

                            <TextView
                                android:id="@+id/tv_duration3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:drawableStart="@drawable/baseline_timer_24"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="30 Min"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="@id/cv_inside3"
                                app:layout_constraintEnd_toStartOf="@id/tv_difficulty3"
                                app:layout_constraintStart_toStartOf="@id/cv_inside3"
                                app:layout_constraintTop_toBottomOf="@id/tv_title3" />

                            <TextView
                                android:id="@+id/tv_difficulty3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:drawableStart="@drawable/baseline_bar_chart_24"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Easy"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="@id/cv_inside3"
                                app:layout_constraintEnd_toEndOf="@id/cv_inside3"
                                app:layout_constraintStart_toEndOf="@id/tv_duration3"
                                app:layout_constraintTop_toBottomOf="@id/tv_title3" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>